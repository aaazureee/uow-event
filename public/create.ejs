	<!-- Begin page content -->
	<main class="container">
		<div class="row big-font">
			<div class="col-md-10 col-lg-8">
				<header class="title mb-2">Create New Event</header>
				<form class="needs-validation ml-1" novalidate>
					<div class="form-group">
						<label for="event-name">Event Name</label>
						<input type="text" class="form-control" id="event-name" placeholder="Event name" required>
						<div class="invalid-feedback">
							Event Name is required.
						</div>
					</div>

					<div class="form-group">
						<label for="overview">Summary</label>
						<textarea class="form-control" id="overview" rows="3" placeholder="Event Short Description" required></textarea>
						<div class="invalid-feedback">
							Event Summary is required.
						</div>
					</div>

					<div class="form-group">
						<label for="address">Address</label>
						<input type="text" class="form-control" id="address" placeholder="Address" required>
						<div class="invalid-feedback">
							Event Address is required.
						</div>
					</div>

					<div class="form-group">
						<label for="date">Date</label>
						<input class="form-control" id="date" placeholder="Event date" required>
						<div class="invalid-feedback">
							Event Date is required.
						</div>
					</div>

					<div class="form-row">
						<div class="form-group col-md-6">
							<label for="start-time">Start Time</label>
							<input class="form-control" id="start-time" placeholder="Start time" required>
							<div class="invalid-feedback" id="start-feedback">
								Event start time is required.
							</div>
						</div>

						<div class="form-group col-md-6">
							<label for="end-time">End Time</label>
							<input class="form-control" id="end-time" placeholder="End time" required>
							<div class="invalid-feedback">
								Event end time is required.
							</div>
						</div>
					</div>

					<!-- Quilljs form -->
					<div class="form-group">
						<label for="full-desc">Full Description</label>
						<div id="full-desc"></div>
						<div class="invalid-feedback" id="quill-feedback">
							Event description is required.
						</div>
					</div>

					<div class="form-row">
						<div class="form-group col-lg-5">
							<label for="capacity">Price</label>
							<input type="number" class="form-control" id="price" min="0" placeholder="Price">
							<div class="invalid-feedback">
								Please enter a valid number.
							</div>
							<small class="form-text text-muted">
								Leave empty if free.
							</small>
						</div>
						<div class="form-group col-lg-5">
							<label for="capacity">Capacity</label>
							<input type="number" class="form-control" id="capacity" min="0" placeholder="Number of seats" required>
							<div class="invalid-feedback">
								Please enter a valid number.
							</div>
						</div>
					</div>

					<div class="form-row">
						<div class="form-group col-lg-5">
							<label for="promo-code">Promotional Code</label>
							<input type="text" class="form-control" id="promo-code" placeholder="Promo code">
							<small class="form-text text-muted">
								Optional.
							</small>
							<div class="invalid-feedback">
								Please provide a promo-code when discount percentage is present.
							</div>
						</div>

						<div class="form-group col-lg-5">
							<label for="discount">Discount percentage</label>
							<input type="number" class="form-control" min="0" max="100" id="discount" placeholder="Discount percentage">
							<small class="form-text text-muted">
								Associated with promotional code.
							</small>
							<div class="invalid-feedback">
								Please enter a valid number.
							</div>
						</div>
					</div>

					<button class="btn btn-primary" type="submit">Submit form</button>
				</form>
			</div>
		</div>
