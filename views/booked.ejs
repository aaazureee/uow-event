<!DOCTYPE html>
<html lang="en">

<head>
  <title>Booked Events - Event Booking System</title>
  <%- include partials/html-head %>
</head>

<body class="booked">
  <%- include partials/navbar %>

    <!-- Begin page content -->
    <main class="container">
      <header class="title my-3">Booking Reminders</header>
      <div class="row">
        <div class="col-12 col-md-6 col-lg-5">
          <div class="list-group" id="booking-list" role="tablist">
            <% for (event of events) { %>  
              <a class="list-group-item list-group-item-action" data-toggle="list" href="#list-<%= event.eventId %>" role="tab">
                  <h5><%= event.eventName %></h5>
                  <small><%= event.durationString %></small>
              </a>
            <% } %>
          </div>
        </div>
        <div class="col-12 mt-3 mt-md-0 col-md-6 col-lg-7 mb-4">
          <div class="tab-content" id="event-content">
            <% for (event of events) { %>
              <div class="tab-pane fade" id="list-<%= event.eventId %>" role="tabpanel">
                <div class="card">
                  <h5 class="card-header">
                    <a href="/event/id/<%= event.eventId %>" class="text-primary">
                      <%= event.eventName %>
                    </a>
                  </h5>
                  <div class="card-body d-flex flex-column justify-content-between">
                    <p class="card-text">
                      <%= event.summary %>
                    </p>
                    <div class="info">
                      <div class="mb-2">
                        <i class="fas fa-map-marker-alt">
                          <span class="font-italic">
                            <%= event.address %>
                          </span>
                        </i>
                      </div>
                      <a href="/event/id/<%= event.eventId %>" class="btn btn-success">View Details</a>
                    </div>
                  </div>
                </div>
              </div>
            <% } %>
          </div>
        </div>
    </main>

    <!-- Sticky Footer -->
    <%- include partials/footer %>

      <!-- Bootstrap core JavaScript
    ================================================== -->
      <!-- Placed at the end of the document so the pages load faster -->
      <%- include partials/html-scripts %>
</body>

</html>