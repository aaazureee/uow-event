<div class="card-body d-flex flex-column justify-content-between">
  <p class="card-text">
    <%= event.summary %>
  </p>
  <div class="info">
    <div class="mb-2">
      <i class="far fa-calendar-alt">
        <span class="font-italic">
          <%= event.durationString %>
        </span>
      </i>
    </div>
    <div class="mb-2">
      <i class="fas fa-map-marker-alt">
        <span class="font-italic">
          <%= event.address %>
        </span>
      </i>
    </div>
    <div class="mb-2">
      <i class="fas fa-dollar-sign">
        <span class="font-italic">
          <%= event.price %>
        </span>
      </i>
    </div>
    <a href="/event/id/<%= event.eventId %>" class="btn btn-success">View Details</a>
  </div>
</div>